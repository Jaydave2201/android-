<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/blueback">

    <TextView
        android:layout_marginTop="20dp"
        android:text="Book Your Tickets Now"
        android:textSize="30sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:fontFamily="@font/calligraffitti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:lottie_rawRes="@raw/travelanimationn"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <Button
        android:id="@+id/bookticket"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Book a Ticket"
        android:background="@drawable/curved_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Cancel a Ticket"
        android:background="@drawable/curved_view"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

</LinearLayout>
